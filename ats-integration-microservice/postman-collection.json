{
	"info": {
		"_postman_id": "ats-integration-service",
		"name": "ATS Integration Service",
		"description": "Postman collection for testing ATS Integration Microservice",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Jobs",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-Key",
						"value": "{{apiKey}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/jobs?status={{jobStatus}}&page={{page}}&per_page={{perPage}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"jobs"
					],
					"query": [
						{
							"key": "status",
							"value": "{{jobStatus}}",
							"disabled": true
						},
						{
							"key": "page",
							"value": "{{page}}"
						},
						{
							"key": "per_page",
							"value": "{{perPage}}"
						}
					]
				}
			}
		},
		{
			"name": "Create Candidate",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-API-Key",
						"value": "{{apiKey}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"{{candidateName}}\",\n  \"email\": \"{{candidateEmail}}\",\n  \"phone\": \"{{candidatePhone}}\",\n  \"resume_url\": \"{{resumeUrl}}\",\n  \"job_id\": \"{{jobId}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/candidates",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"candidates"
					]
				}
			}
		},
		{
			"name": "Get Applications",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-Key",
						"value": "{{apiKey}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/applications?job_id={{jobId}}&page={{page}}&per_page={{perPage}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"applications"
					],
					"query": [
						{
							"key": "job_id",
							"value": "{{jobId}}"
						},
						{
							"key": "page",
							"value": "{{page}}"
						},
						{
							"key": "per_page",
							"value": "{{perPage}}"
						}
					]
				}
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000"
		},
		{
			"key": "apiKey",
			"value": "your-service-api-key-here"
		},
		{
			"key": "jobStatus",
			"value": "OPEN"
		},
		{
			"key": "page",
			"value": "1"
		},
		{
			"key": "perPage",
			"value": "50"
		},
		{
			"key": "candidateName",
			"value": "John Doe"
		},
		{
			"key": "candidateEmail",
			"value": "john.doe@example.com"
		},
		{
			"key": "candidatePhone",
			"value": "+1234567890"
		},
		{
			"key": "resumeUrl",
			"value": "https://example.com/resume.pdf"
		},
		{
			"key": "jobId",
			"value": "12345"
		}
	]
}
